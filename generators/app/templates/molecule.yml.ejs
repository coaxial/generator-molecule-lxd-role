---
dependency:
  name: galaxy
driver:
  name: lxd
lint:
  name: yamllint
platforms:
<% targetVersions.forEach(version => { -%>
<%-`  - name: ${version.codeName}` %>
<%-`    alias: images:${version.distribution}/${version.codeName}` %>
<% }) -%>
provisioner:
  name: ansible
  playbooks:
    create: ../create.yml
    destroy: ../destroy.yml
  lint:
    name: ansible-lint
scenario:
  name: default
verifier:
  name: testinfra
  lint:
    name: flake8
