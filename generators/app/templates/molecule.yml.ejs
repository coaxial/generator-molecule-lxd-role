---
dependency:
  name: galaxy
driver:
  name: lxd
lint:
  name: yamllint
platforms:
<% platforms.forEach(platform => { -%>
<%-`  - name: ${platform.codeName}` %>
<%-`    alias: ${platform.distribution}/${platform.codeName}` %>
<% }) -%>
provisioner:
  name: ansible
  playbooks:
    create: ../create.yml
    destroy: ../destroy.yml
  lint:
    name: ansible-lint
scenario:
  name: default
verifier:
  name: testinfra
  lint:
    name: flake8
